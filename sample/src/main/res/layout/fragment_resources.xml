<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:context="org.smartregister.sample.view.ResourcesFragment"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reveal Progressbar Indicator"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <org.smartregister.reporting.view.RevealProgressWidgetView
            android:id="@+id/revealProgressWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:subTitle="Sprayed" />

        <org.smartregister.reporting.view.RevealProgressWidgetView
            android:id="@+id/revealProgressWidget2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:progress="85"
            app:progressBarBackgroundColor="@color/text_black"
            app:progressBarForegroundColor="@color/colorRevealSecondaryGreen"
            app:subTitle="Coverage" />

    </LinearLayout>
</LinearLayout>
